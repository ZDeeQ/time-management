<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/add_titlebar">
    </include>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="#000000"></View>
    <EditText
        android:id="@+id/goal_name_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:background="@null"
        android:textCursorDrawable="@null"
        android:textColor="#000000"
        android:textSize="20dp"
        android:hint="输入你的目标"
        />
    <EditText
        android:id="@+id/encourage_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:background="@null"
        android:textCursorDrawable="@null"
        android:textColor="#000000"
        android:textSize="15dp"
        android:hint="一些激励的话"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="#000000"></View>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="15dp"
            android:textColor="#000"
            android:textSize="16dp"
            android:gravity="center_vertical"
            android:text="图标"/>
        <ImageView
            android:layout_width="?attr/actionBarSize"
            android:layout_height="wrap_content"
            android:src="@drawable/lamp"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:background="#dedcdc"></View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize">
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="15dp"
            android:textColor="#000"
            android:textSize="16dp"
            android:gravity="center_vertical"
            android:text="需要"/>
        <TextView
            android:id="@+id/needtime_textview"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="15dp"
            android:textColor="#000"
            android:textSize="16dp"
            android:gravity="center_vertical|end"
            android:text="1000小时"/>
        <ImageView
            android:id="@+id/needtime_edit"
            android:layout_width="?attr/actionBarSize"
            android:layout_height="wrap_content"
            android:src="@drawable/edit"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#dedcdc"></View>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize">
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="15dp"
            android:textColor="#000"
            android:textSize="16dp"
            android:gravity="center_vertical"
            android:text="开始"/>
        <TextView
            android:id="@+id/startdate_textview"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="15dp"
            android:textColor="#000"
            android:textSize="16dp"
            android:gravity="center_vertical|end" />
        <ImageView
            android:id="@+id/startdate_edit"
            android:layout_width="?attr/actionBarSize"
            android:layout_height="wrap_content"
            android:src="@drawable/edit"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#dedcdc"></View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize">
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="15dp"
            android:textColor="#000"
            android:textSize="16dp"
            android:gravity="center_vertical"
            android:text="期限"/>
        <TextView
            android:id="@+id/enddate_textview"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="15dp"
            android:textColor="#000"
            android:textSize="16dp"
            android:gravity="center_vertical|end" />
        <ImageView
            android:id="@+id/enddate_edit"
            android:layout_width="?attr/actionBarSize"
            android:layout_height="wrap_content"
            android:src="@drawable/edit"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#dedcdc"></View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize">
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="15dp"
            android:textColor="#000"
            android:textSize="16dp"
            android:gravity="center_vertical"
            android:text="每天"/>
        <TextView
            android:id="@+id/everydaytime_textview"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="15dp"
            android:textColor="#000"
            android:textSize="16dp"
            android:gravity="center_vertical|end" />
        <ImageView
            android:id="@+id/everydaytime_edit"
            android:layout_width="?attr/actionBarSize"
            android:layout_height="wrap_content"
            android:src="@drawable/edit"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="#dedcdc"></View>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#dedcdc"></View>
        <Button
            android:id="@+id/delete_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/shape"
            android:textSize="16dp"
            android:text="删除"
            />
        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#dedcdc"></View>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#dedcdc"></View>

</LinearLayout>